<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="ErrorMessageText">
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="ErrorRetryText">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
  </style>

  <style name="RecipeCard">
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
    <item name="cardElevation">8dp</item>
    <item name="cardCornerRadius">6dp</item>
  </style>

  <style name="RecipeCardTextHolder">
    <item name="android:background">@drawable/background_recipe_card_text_holder</item>
    <item name="android:paddingTop">36dp</item>
    <item name="android:paddingStart">@dimen/spacing</item>
    <item name="android:paddingEnd">@dimen/spacing</item>
    <item name="android:paddingBottom">@dimen/spacing</item>

  </style>

  <style name="RecipeCardText">
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAlignment">textEnd</item>
  </style>

  <style name="RecipeTextHolder">
    <item name="android:background">@color/recipe_text_color</item>
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
    <item name="android:padding">@dimen/padding</item>
  </style>

  <style name="RecipeText">
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="RecipesHeader">
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
  </style>

</resources>
